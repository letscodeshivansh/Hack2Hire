<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community Forum UI</title>
    <link rel="stylesheet" href="index.css">
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <div class="profile">
                <img src="assets/1.jpg" alt="User Avatar" class="profile-image">
                <h2 class="username"><a href="/profile"><%= loggedInUsername %></a></h2> <!-- Display the username dynamically -->

                <p class="user-bio">Developer | Designer | Tech Enthusiast</p>
                <a href = "/askai">
                    <button class="ai-button">Ask-AI</button>
                </a>
                <a href = "/postwork">
                    <button class="ai-button">Post-Work</button>
                </a>
                <a href = "/postwork">
                    <button class="ai-button">Post-Work</button>
                </a>
                
                
                <a href="/postshare">
                    <button class="post-button">Post</button>
                </a>
            </div>
            <div class="menu">
                <button class="menu-item">Technology</button>
                <button class="menu-item">Real Estate</button>
                <button class="menu-item">Development</button>
                <button class="menu-item">Contest</button>
                <button class="menu-item">Blockchain</button>
                <button class="menu-item">Artificial Intelligence</button>
                <button class="menu-item">Cloud</button>
                <button class="menu-item">Database</button>
            </div>
        </div>

        <div class="main-content">
            <div class="main-content-heading">Community Forum</div>

            <% posts.forEach(post => { %>
            <div class="post-card">
                <div class="post-header">
                    <!-- Post photo link to author profile -->
                    <a href="/profile/<%= loggedInUsername === post.author ? '' : post.author %>">
                        <img src="<%= post.imageUrl || 'assets/5.jpg' %>" alt="Post User" class="post-avatar">
                    </a>
                    <div class="post-info">
                        <h3 class="post-username"><%= post.author %></h3> <!-- Author name -->
                        <p class="post-date"><%= post.createdAt.toLocaleString() %></p> <!-- Post date -->
                    </div>
                </div>
                <div class="post-content">
                    <p><%= post.caption %></p> <!-- Post caption -->
                </div>
                <div class="post-footer">
                    <button class="like-button">‚ù§Ô∏è</button>
                    <button class="comment-button">üí¨</button>
                    <button class="share-button">‚á®</button>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
